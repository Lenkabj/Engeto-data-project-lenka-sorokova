SELECT
			ROUND(AVG(cpay.value),2) AS average_wage,
			cpay.industry_branch_code AS industry_code,
			cpay.payroll_year,
			cpib.name AS industry
	FROM czechia_payroll cpay
	LEFT JOIN czechia_payroll_industry_branch cpib 
			ON cpay.industry_branch_code  = cpib.code 
	WHERE 1=1
		AND cpay.industry_branch_code IS NOT NULL -- tato podmienka mi zaistí, že tam nebudem mať úhrn za všetky odvetvia v danom časovom období
		AND cpay.value_type_code = 5958
		AND cpay.calculation_code = 200
	GROUP BY cpay.industry_branch_code, cpay.payroll_year;